{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "allowUnreachableCode": true,
    "pretty": true,
    "sourceMap": false
  },
  "exclude": [
    "node_modules",
    "build",
    "latest_build",
    "contracts"
  ]
}